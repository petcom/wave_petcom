{{!< default}}

{{#author}}
  <div class="gh-outer">
    <main class="site-main gh-inner">

      <div class="term">
        {{> "author-box" authorData=author}}
      </div>

      <div class="post-feed gh-feed">
        {{#foreach posts}}
          {{> "loop"}}
        {{/foreach}}
      </div>

      {{pagination}}
    </main>
  </div>
{{/author}}
