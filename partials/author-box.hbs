{{!-- partials/author-box.hbs (v5/6-safe) --}}
{{#if authorData}}
  {{> "author-box-core" person=authorData}}
{{else}}
  {{#if primary_author}}
    {{> "author-box-core" person=primary_author}}
  {{else}}
    {{#if authors}}
      {{#foreach authors limit="1"}}
        {{> "author-box-core" person=this}}
      {{/foreach}}
    {{else}}
      {{!-- no author available: render nothing --}}
    {{/if}}
  {{/if}}
{{/if}}
