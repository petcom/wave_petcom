<section class="testimonials-section">
  <h2 class="section-title">What People Are Saying</h2>
  <div class="testimonials-grid">
    {{#get "posts" filter="tag:testimonial" limit="5" order="published_at desc"}}
      {{#foreach posts}}
        <article class="testimonial-card card-{{@index}}">
          <h3 class="testimonial-title">{{title}}</h3>
          <p class="testimonial-excerpt">{{excerpt words="30"}}</p>
          <a href="{{url}}" class="read-more">Read Full Testimonial â†’</a>
        </article>
      {{/foreach}}
    {{else}}
      <p>No testimonials available right now. Check back soon!</p>
    {{/get}}
  </div>
</section>

<style>
  .testimonials-section {
    max-width: 1000px;
    margin: 4rem auto;
    padding: 0 1rem;
    text-align: center;
  }

  .section-title {
    font-size: clamp(1.5rem, 4vw, 2rem);
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .testimonials-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  }

  .testimonial-card {
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: var(--text-color);
    transition: transform 0.3s ease;
  }

  .testimonial-card:hover {
    transform: scale(1.03);
  }

  .testimonial-title {
    font-size: var(--font-size-sm);
    margin-bottom: 0.5rem;
  }

  .testimonial-excerpt {
    font-size: var(--font-size-xs);
    color: var(--text-color);
  }

  .read-more {
    display: inline-block;
    margin-top: 0.75rem;
    color: var(--link-color);
    text-decoration: underline;
    font-weight: 500;
  }
  .testimonials-grid {
  position: relative;
  transition: all 0.4s ease;
}

.testimonial-card {
  position: relative;
  transition: all 0.4s ease;
  z-index: 1;
}

.testimonials-grid.neat .testimonial-card {
  transform: none !important;
  z-index: 1;
}


  /* Optional: apply some visual variation using nth-child */
  .card-0 { transform: rotate(-1deg); }
  .card-1 { transform: scale(1.02); }
  .card-2 { background: rgba(255,255,255,0.03); }
  .card-3 { transform: translateY(-2px); }
  .card-4 { background: rgba(255,255,255,0.06); }

</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const cards = document.querySelectorAll('.testimonial-card');
  const grid = document.querySelector('.testimonials-grid');

  cards.forEach((card, i) => {
    const hue = Math.floor(Math.random() * 360);
    const bgColor = `hsl(${hue}, 40%, 20%)`;
    card.style.backgroundColor = bgColor;

    const rotate = (Math.random() - 0.5) * 6; // -3deg to +3deg
    const translateX = (Math.random() - 0.5) * 20; // -10px to +10px
    const translateY = (Math.random() - 0.5) * 20; // -10px to +10px

    card.style.transform = `rotate(${rotate}deg) translate(${translateX}px, ${translateY}px)`;

    // Random stacking order for overlap effect
    card.style.zIndex = Math.floor(Math.random() * 5) + 1;
  });

  // Neaten layout on click
  grid.addEventListener('click', () => {
    grid.classList.toggle('neat');
  });
});
</script>

