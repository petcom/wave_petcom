{{#get "posts" filter="slug:~^'engagement-cta'" order="slug asc"}}
  {{#foreach posts}}
    <section class="engagement-cta">
      <div class="inner">
        <h2 class="section-title">{{title}}</h2>
        <div class="intro-text">
          {{{html}}}
        </div>
        <a href="/contact-us" class="btn-sonar" style="margin-top: 2rem;">Start a Conversation</a>
      </div>
    </section>
  {{/foreach}}
{{else}}
  {{!-- Fallback if post not found --}}
  <section class="engagement-cta">
    <div class="inner">
      <h2 class="section-title">Create With Us</h2>
      <p class="intro-text">
        Create, connect, and evolve. Whether you're building, guiding, or exploring, we invite you to regulate, resonate, and relate with us.
      </p>
      <a href="/contact-us" class="btn-sonar" style="margin-top: 2rem;">Start a Conversation</a>
    </div>
  </section>
{{/get}}

<style>
  .engagement-cta {
    background-color: var(--background-color);
    padding: 2rem 1rem;
    color: var(--text-color);
  }

  .engagement-cta .inner {
    max-width: 800px;
    margin: 2rem auto;
  }

  .section-title {
    font-size: 5rem;
    margin-bottom: 1rem;
    text-align: center;
    color: var(--text-color);
  }

  .intro-text {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .create-bullets {
    list-style: none;
    padding: 0;
    text-align: left;
    margin: 0 auto;
    max-width: 640px;
  }

  .create-bullets li {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    line-height: 1.6;
    color: var(--text-color);
  }

  .btn-sonar {
    background: var(--accent-color);
    color: #fff;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .btn-sonar:hover {
    background: var(--link-color);
  }
</style>
