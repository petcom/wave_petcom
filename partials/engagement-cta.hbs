{{#get "posts" filter="slug:~^'engagement-cta'" order="slug asc"}}
  {{#foreach posts}}
    <section class="engagement-cta">
      <div class="inner">
        
          <div class="intro-text">
          {{{html}}}
        </div>
        <a href="/contact-us" class="btn-sonar" style="margin-top: 2rem;">Click to Start</a>
      </div>
    </section>
  {{/foreach}}
{{else}}
  {{!-- Fallback if post not found --}}
  <section class="engagement-cta">
    <div class="inner">
      <h2 class="section-title">Create With Us</h2>
      <p class="intro-text">
        Create, connect, and evolve. Whether you're building, guiding, or exploring, we invite you to regulate, resonate, and relate with us.
      </p>
      <a href="/contact-us" class="btn-sonar" style="margin-top: 2rem;">Start a Conversation</a>
    </div>
  </section>
{{/get}}

<style>
  .engagement-cta {
    background-color: var(--background-color);
    padding: 2rem 1rem;
    color: var(--text-color);
  }

  .engagement-cta .inner {
    max-width: 800px;
    margin: 2rem auto;
    display: flex;
    flex-direction: column;
    min-height: 300px;
  }

  .section-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    margin-bottom: 1rem;
    text-align: center;
    color: var(--text-color);
  }

  .intro-text {
    font-size: clamp(1.2rem, 3vw, 1.75rem);
    margin-bottom: 1rem;
    color: var(--text-color);
    flex-grow: 1;
  }

  .engagement-cta .btn-sonar {
    margin-top: auto;
    align-self: center;
  }

  .create-bullets {
    list-style: none;
    padding: 0;
    text-align: left;
    margin: 0 auto;
    max-width: 640px;
  }

  .create-bullets li {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    line-height: 1.6;
    color: var(--text-color);
  }

  .btn-sonar {
    background: var(--accent-color);
    color: #fff;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: background 0.3s ease;
  }

  .btn-sonar:hover {
    background: var(--link-color);
  }
</style>
