{{!-- CSS Custom Variables Injection --}}
<style>
:root {
    /* Theme Colors */
    --background-color: {{@custom.background_color}};
    --text-color: {{@custom.text_color}};
    --accent-color: {{@custom.accent_color}};
    --link-color: {{@custom.link_color}};
    --post-background-color: {{@custom.post_background_color}};
    
    /* Font Classes for Dynamic Assignment */
    {{#match @custom.title_font "Modern sans-serif"}}
        --theme-heading-font: var(--font-sans);
    {{else}}
        --theme-heading-font: var(--font-serif);
    {{/match}}
    
    {{#match @custom.body_font "Modern sans-serif"}}
        --theme-body-font: var(--font-sans);
    {{else}}
        --theme-body-font: var(--font-serif);
    {{/match}}
}

/* Dynamic Font Assignment */
{{#match @custom.title_font "Elegant serif"}}
body { --gh-font-heading: var(--font-serif); }
{{/match}}

{{#match @custom.body_font "Elegant serif"}}
body { --gh-font-body: var(--font-serif); }
{{/match}}

/* Navigation Layout Classes */
{{#match @custom.navigation_layout "Logo in the middle"}}
body { --nav-layout: middle; }
.gh-head-inner { justify-content: center; }
{{/match}}

{{#match @custom.navigation_layout "Stacked"}}
body { --nav-layout: stacked; }
{{/match}}
</style>